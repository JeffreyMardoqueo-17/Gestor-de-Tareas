------Esta se supone que si es la buena xd------
CREATE DATABASE GestordeTareasBD;
GO

USE GestordeTareasBD;
GO


----Cargo del usuario-----
CREATE TABLE Cargo(
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    Nombre VARCHAR (50) NOT NULL
);
GO


-----De que tipo es la tarea-----
CREATE TABLE Categoria(
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    Nombre VARCHAR (50) NOT NULL
);
GO


-----Prioridad de la tarea-----
CREATE TABLE Prioridad(
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    Nombre VARCHAR (50) NOT NULL
);
GO


-----Estado de la tarea-----
CREATE TABLE EstadoTarea(
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    Nombre VARCHAR (50) NOT NULL
);
GO


-----Datos para el admin y empleado-----
CREATE TABLE Usuario(
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    Nombre VARCHAR (50) NOT NULL,
    Apellido VARCHAR (50) NOT NULL,
    FechaNacimiento DATE NOT NULL,
    Telefono VARCHAR (9) NOT NULL,
    NombreUsuario VARCHAR (50) NOT NULL,
    Correo VARCHAR (50) NOT NULL,
    Pass VARCHAR (100) NOT NULL,
    IdCargo INT NOT NULL FOREIGN KEY REFERENCES Cargo(Id)
);
GO


-----Datos que debe ingresar en el login-----
CREATE TABLE InicioSesion (
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    NombreUsuario VARCHAR (50) NOT NULL,
    Pass VARCHAR (100) NOT NULL,
    IdUsuario INT NOT NULL FOREIGN KEY REFERENCES Usuario (Id)
);
GO


-----creación de la tarea y datos-----
CREATE TABLE Tarea(
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    Nombre VARCHAR (50) NOT NULL,
    Descripcion VARCHAR(MAX) NOT NULL,
    FechaVencimiento DATETIME NOT NULL,
    IdCategoria INT NOT NULL FOREIGN KEY REFERENCES Categoria(Id),
    IdPrioridad INT NOT NULL FOREIGN KEY REFERENCES Prioridad(Id),
    IdEstadoTarea INT NOT NULL FOREIGN KEY REFERENCES EstadoTarea(Id)
);
GO


-----Almacenamiento de la imagen----
CREATE TABLE ImagenTarea (
    Id INT PRIMARY KEY IDENTITY(1,1),
    RutaImagen NVARCHAR(MAX) NOT NULL,
    IdTarea INT NOT NULL FOREIGN KEY REFERENCES Tarea (Id)
);
GO


-----A quién se le ha asignado la tarea-----
CREATE TABLE AsignacionTareas(
    Id INT NOT NULL PRIMARY KEY IDENTITY (1,1),
    FechaAsignada DATE NOT NULL,
    FechaFinalizacion DATETIME NOT NULL,
    IdTarea INT NOT NULL FOREIGN KEY REFERENCES Tarea(Id),
    IdUsuario INT NOT NULL FOREIGN KEY REFERENCES Usuario(Id)
);



