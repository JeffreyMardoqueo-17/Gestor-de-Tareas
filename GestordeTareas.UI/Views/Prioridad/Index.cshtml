@model IEnumerable<GestordeTaras.EN.Prioridad>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

}

<h1>Prioridad</h1>

<a asp-action="Create" class="flex items-center m-2 justify-center focus:outline-none text-white bg-gradient-to-r from-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-3 py-2 mb-2 dark:focus:ring-purple-900 w-auto">
    <i class="fas fa-plus"></i> Crear
</a>

<hr />

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-black uppercase bg-purple-200 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th scope="col" class="px-6 py-3">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-purple-200 dark:hover:bg-gray-600">
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="px-6 py-4">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="px-6 py-4 text-right">
                        <div class="inline-flex">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="flex items-center justify-center focus:outline-none text-white bg-gradient-to-r from-yellow-400 via-yellow-500 to-yellow-600 hover:bg-gradient-to-br focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-3 py-2.5 me-1 mb-2 dark:focus:ring-yellow-800">
                                <i class="fas fa-edit me-1"></i> Editar
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="flex items-center justify-center focus:outline-none text-white bg-gradient-to-r from-red-600 to-red-700 hover:bg-gradient-to-br focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-3 py-2.5 me-1 mb-2 dark:focus:ring-red-900">
                                <i class="fas fa-trash-alt me-1"></i> Eliminar
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<p>
    <a href="#" class="btn btn-success" onclick="cargarVistaCreate()">
        <i class="fas fa-plus"></i> Crear Nueva Prioridad
    </a>
</p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    <a href="#" class="btn btn-primary btn-sm" onclick="cargarVistaEdit(@item.Id)">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a href="#" class="btn btn-warning btn-sm" onclick="cargarVistaDetails(@item.Id)">
                        <i class="fas fa-eye"></i>
                    </a>

                    <a href="#" class="btn btn-danger btn-sm" onclick="cargarVistaDelete(@item.Id)">
                        <i class="fas fa-trash-alt"></i>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal de creación -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Crear Prioridad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div id="createModalContent">
                    <!-- Contenido de la vista de edición se cargará aquí -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="submitcreateForm('createForm')">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de edición -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Prioridad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div id="editModalContent">
                    <!-- Contenido de la vista de edición se cargará aquí -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="submiteditForm('editForm')">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de detalles -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles de la Prioridad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div id="detailsModalContent">
                    <!-- Contenido de la vista de edición se cargará aquí -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Eliminar Prioridad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body" id="deleteModalContent">
                <!-- Contenido de la vista de eliminación se cargará aquí -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="eliminarPrioridad()">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>



<!-- Bootstrap JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>



<script>

    function submitcreateForm(formId) {
        var formData = $('#' + formId).serialize(); // Recopila los datos del formulario
        $.ajax({
            url: '/Prioridad/Create', // URL de la acción Create en el controlador Categoria
            type: 'POST',
            data: formData,
            success: function (response) {
                // Manejar la respuesta del servidor si es necesario
                window.location.reload();
                $('#createModal').modal('hide');
            },
            error: function (xhr, status, error) {
                // Manejar errores si ocurrieron durante la solicitud AJAX
                console.error(xhr.responseText);
            }
        });
    }

    function submiteditForm(formId) {
        var formData = $('#' + formId).serialize(); // Recopila los datos del formulario
        $.ajax({
            url: '/Prioridad/Edit', // URL de la acción Create en el controlador Categoria
            type: 'POST',
            data: formData,
            success: function (response) {
                // Recargar la página después de enviar el formulario
                window.location.reload();
            },
            error: function (xhr, status, error) {
                // Manejar errores si ocurrieron durante la solicitud AJAX
                console.error(xhr.responseText);
            }
        });
    }

    function eliminarPrioridad() {
        // Enviar una solicitud AJAX para eliminar la categoría
        $.ajax({
            url: '/Prioridad/Delete', // URL de la acción POST para eliminar la categoría
            type: 'POST', // Método POST para enviar la solicitud
            data: $("#deleteForm").serialize(), // Serializar los datos del formulario (que incluye el ID de la categoría)
            success: function (response) {
                // Recargar la página después de eliminar la categoría
                window.location.reload();
            },
            error: function (xhr, status, error) {
                alert('Error al eliminar la categoría: ' + xhr.responseText);
            }
        });
    }



    function cargarVistaCreate() {
        $.ajax({
            url: "/Prioridad/Create",
            type: "GET",
            success: function (data) {
                $("#createModalContent").html(data);
                $("#createModal").modal("show");
            }
        });
    }

    function cargarVistaEdit(id) {
        $.ajax({
            url: "/Prioridad/Edit/" + id,
            type: "GET",
            success: function (data) {
                $("#editModalContent").html(data);
                $("#editModal").modal("show");
            }
        });
    }

    function cargarVistaDetails(id) {
        $.ajax({
            url: "/Prioridad/DetailsPartial/" + id,
            type: "GET",
            success: function (data) {
                $("#detailsModalContent").html(data);
                $("#detailsModal").modal("show");
            }
        });
    }

    function cargarVistaDelete(id) {
        $.ajax({
            url: "/Prioridad/Delete/" + id,
            type: "GET",
            success: function (data) {
                $("#deleteModalContent").html(data); // Esto muestra el contenido de la categoria
                $("#deleteModal").modal("show");
            },
            error: function () {
                alert("Error al cargar la vista de eliminación.");
            }
        });
    }

</script>

