@model IEnumerable<GestordeTaras.EN.Prioridad>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<h1>Prioridad</h1>

<p>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#crearPrioridadModal">
        <i class="fas fa-plus"></i>  Nueva prioridad
    </button>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm" onclick="abrirModalEditar(@item.Id)">
                        <i class="fas fa-edit"></i> Editar
                    </button>
                    <button type="button" class="btn btn-warning btn-sm" onclick="abrirModalDetalles(@item.Id)">
                        <i class="fas fa-eye"></i> Detalles
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" onclick="abrirModalEliminar(@item.Id, '@item.Nombre')">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Contenido del modal de editar -->
<div class="modal fade" id="editarPrioridadModal" tabindex="-1" role="dialog" aria-labelledby="modalEditarPrioridadLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarPrioridadLabel">Editar prioridad</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="editarPrioridadModalBody">
                <!-- Aquí se cargará el contenido de la vista Edit.cshtml -->
            </div>
        </div>
    </div>
</div>

<!-- Contenido del modal de eliminar -->
<div class="modal fade" id="eliminarPrioridadModal" tabindex="-1" role="dialog" aria-labelledby="modalEliminarPrioridadLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarPrioridadLabel">Eliminar Prioridad</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Seguro que desea eliminar la prioridad <span id="prioridadNombre"></span>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="eliminarPrioridad()">Eliminar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Función para abrir el modal de editar
        function abrirModalEditar(id) {
            // Hacer una petición AJAX para cargar los datos de la categoría con el ID correspondiente
            $.ajax({
                url: '/Prioridad/EditPartial/' + id,
                type: 'GET',
                success: function (data) {
                    // Una vez que se reciben los datos, actualizar el contenido del modal con el formulario de edición
                    $('#editarPrioridadModal .modal-body').html(data);
                    // Abrir el modal de editar
                    $('#editarPrioridadModal').modal('show');
                },
                error: function (xhr, status, error) {
                    // Manejar cualquier error que ocurra durante la petición AJAX
                    console.error(error);
                }
            });
        }

    </script>
}

    