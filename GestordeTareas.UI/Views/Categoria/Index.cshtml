@model IEnumerable<GestordeTaras.EN.Categoria>

@{
    ViewData["Title"] = "Index";
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

}

<h1>Categoria</h1>

<a id="btnCrearCategoria" class="btn btn-success">
    <i class="fas fa-plus"></i> Crear nueva categoría
</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    <button class="btn btn-primary btn-sm" onclick="abrirModalEditar(@item.Id)">
                        <i class="fas fa-edit"></i> Editar
                    </button>
                    <button class="btn btn-info btn-sm" onclick="abrirModalDetalles(@item.Id)">
                        <i class="fas fa-eye"></i> Detalles
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="abrirModalEliminar(@item.Id)">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts {
    <script>
        function abrirModalEditar(id) {
            $('#modalEditarCategoria').modal('show');
        }

        function abrirModalDetalles(id) {
            $('#modalDetallesCategoria').modal('show');
        }

        function abrirModalEliminar(id) {
            $('#modalEliminarCategoria').modal('show');
        }
    </script>
}
