@model IEnumerable<GestordeTaras.EN.Categoria>

@{
    ViewData["Title"] = "Index";

    int numPage = 1;
    int numRegistros = 0;
    int numRegistroPorPage = 10;
    int[] tops = { 10, 20, 50, 100, 500, 1000, 10000, -1 };
    int topActual = Convert.ToInt32(ViewBag.Top);
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

}

<h1>Listado de Categorías</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Index">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input type="text" class="form-control" name="Nombre" />
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Top</label>
                        <select name="Top_Aux" class="form-control">
                            @foreach (var item in tops)
                            {
                                string strItem = item != -1 ? item.ToString() : "Todos";
                                if (item != topActual)
                                {
                                    <option value="@item">@strItem</option>
                                }
                                else
                                {
                                    <option selected value="@item">@strItem</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4 m-2">
                <input type="submit" value="Buscar" class="btn btn-outline-info" /> &nbsp;&nbsp;
                <a asp-action="Create" class="btn btn-outline-primary">Nueva categoría</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-responsive table-striped paginationjs">
   
    <tbody>
        @foreach (var item in Model)
        {
            
            numRegistros++;
            if (numRegistros == numRegistroPorPage)
            {
                numPage++;
                numRegistros = 0;
            }
        }
    </tbody>
</table>


<p>
    <a href="#" class="btn btn-success" onclick="cargarVistaCreate()">
        <i class="fas fa-plus"></i> Crear Nueva Categoria
    </a>
</p>



<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anotherItem in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => anotherItem.Id)</td>
                <td>@Html.DisplayFor(modelItem => anotherItem.Nombre)</td>
                <td>

                    <a href="@Url.Action("Edit", new { id = anotherItem.Id })" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="@Url.Action("Details", new { id = anotherItem.Id })" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Detalles
                    </a>
                    <a href="@Url.Action("Delete", new { id = anotherItem.Id })" class="btn btn-danger btn-sm">

                    <a href="#" class="btn btn-primary btn-sm" onclick="cargarVistaEdit(item.Id)">
                        <i class="fas fa-edit"></i> Editar
                    </a>

                    <a href="#" class="btn btn-warning btn-sm" onclick="cargarVistaDetails(item.Id)">
                        <i class="fas fa-eye"></i> Detalles
                    </a>

                    <a href="#" class="btn btn-danger btn-sm" onclick="cargarVistaDelete(item.Id)">

                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>

                </td>
            </tr>
        }

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new{ id = item.Id }, new { @class = "btn btn-outline-info" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-secondary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
}
    </tbody>
</table>


@if (numPage > 1)
{
    <div class="row" style="overflow:auto">
        <div class="col-md-12">
            <ul class="pagination paginationjs" data-numpage="@numPage" data-pageactive="1">
                <li class="page-item" data-typepage="Previous"><a class="page-link" href="#">Previous</a></li>
                @for (var i = 1; i <= numPage; i++)
                {
                    <li class="page-item" data-page="@i" data-typepage="Item"><a class="page-link" href="#">@i</a></li>
                }
                <li class="page-item" data-typepage="Next"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
}

@section Scripts {
    <script>
        function abrirModalEditar(id) {
            $('#modalEditarCategoria').modal('show');
        }

        function abrirModalDetalles(id) {
            $('#modalDetallesCategoria').modal('show');
        }

        function abrirModalEliminar(id) {
            $('#modalEliminarCategoria').modal('show');
        }
    </script>
}

<!-- Modal de creación -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Crear Categoría</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="createModalContent">
                    <!-- Contenido de la vista de edición se cargará aquí -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de edición -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Categoría</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="editModalContent">
                    <!-- Contenido de la vista de edición se cargará aquí -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de detalles -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles de la categoría</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="detailsModalContent">
                    <!-- Contenido de la vista de edición se cargará aquí -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Eliminar Categoría</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="deleteModalContent">
                <!-- Contenido de la vista de eliminación se cargará aquí -->
            </div>
        </div>
    </div>
</div>




<script>

    function cargarVistaCreate() {
        $.ajax({
            url: "/Categoria/Create",
            type: "GET",
            success: function (data) {
                $("#createModalContent").html(data);
                $("#createModal").modal("show");
            }
        });
    }

    function cargarVistaEdit(id) {
        $.ajax({
            url: "/Categoria/Edit/" + id,
            type: "GET",
            success: function (data) {
                $("#editModalContent").html(data);
                $("#editModal").modal("show");
            }
        });
    }

    function cargarVistaDetails(id) {
        $.ajax({
            url: "/Categoria/DetailsPartial/" + id,
            type: "GET",
            success: function (data) {
                $("#detailsModalContent").html(data);
                $("#detailsModal").modal("show");
            }
        });
    }

    function cargarVistaDelete(id) {
        $.ajax({
            url: "/Categoria/Delete/" + id,
            type: "GET",
            success: function (data) {
                $("#deleteModalContent").html(data); // Esto muestra el contenido de la categoria
                $("#deleteModal").modal("show");
            },
            error: function () {
                alert("Error al cargar la vista de eliminación.");
            }
        });
    }


</script>


